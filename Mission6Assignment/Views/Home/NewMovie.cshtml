@{
    ViewData["Title"] = "Add New Movie";
 }

@model Mission6Assignment.Models.NewMovie
 <!--This is where I will gather all of the information that I need-->
<h1>Add a New Movie</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="MovieTitle">Movie Title:</label>
        <input asp-for="MovieTitle" required /><br />

        <label asp-for="CategoryID">Movie Category:</label>
        <select asp-for="CategoryID" required>
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Category)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select> <br />

        <label asp-for="Director"> Director</label>
        <input asp-for="Director" required /><br />

        <label asp-for="YearCreated">Year Made:</label>
        <input asp-for="YearCreated" required type="number" /><br />

        <label asp-for="Rating">Movie Rating:</label>
        <select asp-for="Rating" required>
            <option value="default" selected></option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="IsEdited">Has it been edited?</label>
        <select asp-for="IsEdited">
            <option value="default" selected></option>
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br />

        <label asp-for="LentTo">Who did you lend this to?</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" />
        <br />
        <br />
        <button type="submit">Add Movie</button>
    </form>
</div>
